# Staging Environment Configuration
ENVIRONMENT=staging

# Database
DATABASE_CONNECTION_STRING=Server=staging-db.chanzup.com,1433;Database=ChanzupStaging;User Id=chanzup_user;Password=${STAGING_DB_PASSWORD};TrustServerCertificate=true;MultipleActiveResultSets=true

# Redis
REDIS_CONNECTION_STRING=staging-redis.chanzup.com:6379,password=${STAGING_REDIS_PASSWORD}

# JWT Configuration
JWT_SECRET_KEY=${STAGING_JWT_SECRET_KEY}
JWT_ISSUER=Chanzup-Staging
JWT_AUDIENCE=Chanzup-Staging

# External Services
GOOGLE_MAPS_API_KEY=${STAGING_GOOGLE_MAPS_API_KEY}
STRIPE_PUBLISHABLE_KEY=${STAGING_STRIPE_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STAGING_STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STAGING_STRIPE_WEBHOOK_SECRET}
SENDGRID_API_KEY=${STAGING_SENDGRID_API_KEY}
SENDGRID_FROM_EMAIL=noreply@staging.chanzup.com

# Azure Services
AZURE_STORAGE_CONNECTION_STRING=${STAGING_AZURE_STORAGE_CONNECTION_STRING}
AZURE_KEYVAULT_URL=${STAGING_AZURE_KEYVAULT_URL}

# Application Insights
APPINSIGHTS_INSTRUMENTATION_KEY=${STAGING_APPINSIGHTS_INSTRUMENTATION_KEY}
APPINSIGHTS_CONNECTION_STRING=${STAGING_APPINSIGHTS_CONNECTION_STRING}

# Security
ALLOWED_HOSTS=staging.chanzup.com,staging-api.chanzup.com
ALLOWED_ORIGINS=https://staging.chanzup.com,https://staging-backoffice.chanzup.com

# Notifications
SLACK_WEBHOOK_URL=${STAGING_SLACK_WEBHOOK_URL}