{
  "dashboard": {
    "id": null,
    "title": "Chanzup Platform Dashboard",
    "tags": ["chanzup", "platform"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(chanzup_api_response_time_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(chanzup_api_response_time_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(chanzup_api_response_time_seconds_count[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per second",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "QR Scans",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(chanzup_qr_scans_total[5m])",
            "legendFormat": "QR Scans/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Scans per second",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Wheel Spins",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(chanzup_wheel_spins_total[5m])",
            "legendFormat": "Wheel Spins/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Spins per second",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Active Players",
        "type": "singlestat",
        "targets": [
          {
            "expr": "chanzup_active_players",
            "legendFormat": "Active Players"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Active Campaigns",
        "type": "singlestat",
        "targets": [
          {
            "expr": "chanzup_active_campaigns",
            "legendFormat": "Active Campaigns"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(chanzup_api_response_time_seconds_count{status_code=~\"4..|5..\"}[5m]) / rate(chanzup_api_response_time_seconds_count[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate",
            "min": 0,
            "max": 1
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}