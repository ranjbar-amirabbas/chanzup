# Production Environment Configuration
ENVIRONMENT=production

# Database
DATABASE_CONNECTION_STRING=Server=prod-db.chanzup.com,1433;Database=ChanzupProd;User Id=chanzup_user;Password=${PROD_DB_PASSWORD};TrustServerCertificate=true;MultipleActiveResultSets=true

# Redis
REDIS_CONNECTION_STRING=prod-redis.chanzup.com:6379,password=${PROD_REDIS_PASSWORD}

# JWT Configuration
JWT_SECRET_KEY=${PROD_JWT_SECRET_KEY}
JWT_ISSUER=Chanzup
JWT_AUDIENCE=Chanzup

# External Services
GOOGLE_MAPS_API_KEY=${PROD_GOOGLE_MAPS_API_KEY}
STRIPE_PUBLISHABLE_KEY=${PROD_STRIPE_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${PROD_STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${PROD_STRIPE_WEBHOOK_SECRET}
SENDGRID_API_KEY=${PROD_SENDGRID_API_KEY}
SENDGRID_FROM_EMAIL=noreply@chanzup.com

# Azure Services
AZURE_STORAGE_CONNECTION_STRING=${PROD_AZURE_STORAGE_CONNECTION_STRING}
AZURE_KEYVAULT_URL=${PROD_AZURE_KEYVAULT_URL}

# Application Insights
APPINSIGHTS_INSTRUMENTATION_KEY=${PROD_APPINSIGHTS_INSTRUMENTATION_KEY}
APPINSIGHTS_CONNECTION_STRING=${PROD_APPINSIGHTS_CONNECTION_STRING}

# Security
ALLOWED_HOSTS=chanzup.com,api.chanzup.com
ALLOWED_ORIGINS=https://chanzup.com,https://backoffice.chanzup.com

# Notifications
SLACK_WEBHOOK_URL=${PROD_SLACK_WEBHOOK_URL}