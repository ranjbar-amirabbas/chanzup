{
  "ConnectionStrings": {
    "DefaultConnection": "#{STAGING_DATABASE_CONNECTION_STRING}#",
    "RedisConnection": "#{STAGING_REDIS_CONNECTION_STRING}#"
  },
  "Jwt": {
    "SecretKey": "#{STAGING_JWT_SECRET_KEY}#",
    "Issuer": "Chanzup-Staging",
    "Audience": "Chanzup-Staging",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "ExternalServices": {
    "GoogleMaps": {
      "ApiKey": "#{STAGING_GOOGLE_MAPS_API_KEY}#",
      "BaseUrl": "https://maps.googleapis.com/maps/api"
    },
    "Stripe": {
      "PublishableKey": "#{STAGING_STRIPE_PUBLISHABLE_KEY}#",
      "SecretKey": "#{STAGING_STRIPE_SECRET_KEY}#",
      "WebhookSecret": "#{STAGING_STRIPE_WEBHOOK_SECRET}#"
    },
    "SendGrid": {
      "ApiKey": "#{STAGING_SENDGRID_API_KEY}#",
      "FromEmail": "#{STAGING_SENDGRID_FROM_EMAIL}#",
      "FromName": "Chanzup Platform - Staging"
    },
    "Azure": {
      "StorageConnectionString": "#{STAGING_AZURE_STORAGE_CONNECTION_STRING}#",
      "KeyVaultUrl": "#{STAGING_AZURE_KEYVAULT_URL}#"
    }
  },
  "Security": {
    "RequireHttps": true,
    "EnableRateLimiting": true,
    "MaxRequestsPerMinute": 200,
    "EnableLocationVerification": false,
    "LocationToleranceMeters": 1000,
    "EnableAntiFraud": false,
    "SessionTimeoutMinutes": 60
  },
  "GameSettings": {
    "MaxSpinsPerDay": 50,
    "MaxTokensPerDay": 500,
    "QRCodeCooldownSeconds": 10,
    "PrizeExpirationDays": 7,
    "DefaultTokensPerScan": 10
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Chanzup": "Debug"
    },
    "ApplicationInsights": {
      "InstrumentationKey": "#{STAGING_APPINSIGHTS_INSTRUMENTATION_KEY}#",
      "ConnectionString": "#{STAGING_APPINSIGHTS_CONNECTION_STRING}#"
    }
  },
  "HealthChecks": {
    "Enabled": true,
    "DatabaseTimeoutSeconds": 30,
    "RedisTimeoutSeconds": 10,
    "ExternalServiceTimeoutSeconds": 15
  },
  "Caching": {
    "DefaultExpirationMinutes": 30,
    "SessionExpirationMinutes": 15,
    "AnalyticsExpirationMinutes": 5
  },
  "AllowedHosts": "#{STAGING_ALLOWED_HOSTS}#"
}